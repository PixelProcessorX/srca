		String sqlD = "delete from rcdb where columnA=value";
		myStmt0.executeUpdate(sqlI);
		
		
		
		}catch(Exception e){
		    throw new IllegalStateException("Generic Exception Catch Triggered", e);
		}
	}
	
	
	
	
	
	
